{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": false,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom", "ES2015"], //新增
        "baseUrl": ".",
        "paths": {
            // 新增
            "@/*": ["src/*"],
            "@page/*": ["src/views/*"],
            "@img/*": ["src/asstes/img/*"]
        },
        "outDir": "dist",
        "types": ["vite/client", "vexip-ui/types"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "auto-imports.d.ts",
        "components.d.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
